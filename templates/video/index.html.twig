{% extends 'nav.html.twig' %}

{% block title %}Video index{% endblock %}

{% block body %}
    <h1>Video index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Url</th>
                <th>Caption</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for video in videos %}
            <tr>
                <td>{{ video.id }}</td>
                <td>{{ video.url }}</td>
                <td>{{ video.caption }}</td>
                <td>{{ video.createdAt ? video.createdAt|date('Y-m-d') : '' }}</td>
                <figure>
                <td>
                    <video width="200" height="170" controls>
                 <source src="{{ video.url}}" type="video/mp4">
                    Votre navigateur ne prend pas en charge la lecture de vid√©os.
            </video>
            </figure>
                </td>
    
                <td>
                    <a href="{{ path('app_video_show', {'id': video.id}) }}">show</a>
                    <a href="{{ path('app_video_edit', {'id': video.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_video_new') }}">Create new</a>
{% endblock %}
